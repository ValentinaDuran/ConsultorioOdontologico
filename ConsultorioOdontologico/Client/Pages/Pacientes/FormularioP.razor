<EditForm Model="paciente" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class ="form-group">
        <label>Nombre</label>
        <div> 
            <InputText class=" form-control" @bind-Value="@paciente.Nombre"/>
                <ValidationMessage For ="@(()=> paciente.Nombre)"/>
        </div>
    </div>
    <div class ="form-group">
        <label>Apellido</label>
        <div> 
            
            <InputText class=" form-control" @bind-Value="@paciente.Apellido"/>
                <ValidationMessage For ="@(()=> paciente.Apellido)"/>
        </div>
    </div>
    <div class ="form-group">
        <label>Mail</label>
        <div> 
            
            <InputText class=" form-control" @bind-Value="@paciente.Mail"/>
                <ValidationMessage For ="@(()=> paciente.Mail)"/>
        </div>
    </div>
    <div class="form-group">
        <label>Obra Social</label>
        <div>

            <InputText class=" form-control" @bind-Value="@paciente.NombreObraSocial" />
            <ValidationMessage For="@(()=> paciente.NombreObraSocial)" />
        </div>
    </div>
    <div class="form-group">
        <label>DNI</label>
        <div>

            <InputNumber class=" form-control" @bind-Value="@paciente.DNI" />
            <ValidationMessage For="@(()=> paciente.DNI)" />
        </div>
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <div>

            <InputNumber class=" form-control" @bind-Value="@paciente.Teléfono" />
            <ValidationMessage For="@(()=> paciente.Teléfono)" />
        </div>
    </div>

    <br />

    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>


@code {
    [Parameter] public Paciente paciente { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
